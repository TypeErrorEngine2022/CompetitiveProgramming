{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build active file",
			"command": "clang++",
			"args": [
				"-std=c++17",
				"-fdiagnostics-color=always",
				"-g",
				"-Wall",
				"-I/opt/homebrew/include",
				"-L/opt/homebrew/lib",
				"${workspaceFolder}/*.cpp",
				"-o",
				"main"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}